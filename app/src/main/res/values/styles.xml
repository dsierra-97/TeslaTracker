<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:fontFamily">@font/tesla_font</item>
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/tesla_font</item>
    </style>

    <style name="CustomFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@color/colorOnPrimary</item>
    </style>

    <style name="CustomSwitch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/colorPrimary</item>
        <item name="trackTint">@color/colorSecondaryText</item>
    </style>

</resources>
